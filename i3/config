exec_always --no-startup-id $HOME/.config/polybar/launch.sh

for_window [class="^.*"] border pixel 0
for_window [class="Galculator"] floating enable
gaps inner 20
# smart_gaps on
# smart_borders on

client.focused #048ac7 #048ac7 #ffffff #dddddd
client.focused_inactive #333333 #333333 #888888 #292d2e
client.unfocused #00000000 #00000000 #888888 #292d2e
client.urgent #2f343a #900000 #ffffff #900000

set $wsBrowser "2:"
set $wsMail "3:"
set $wsConsole "1:"
set $wsCode "4:"
set $wsChat "5:"
set $wsDesign "6:"
set $wsVM "7:"
set $wsVCS "8:"
set $wsDebug "9:"
set $wsMusic "10:"

# map workspaces to outputs
workspace $wsBrowser output HDMI-0
workspace $wsMail output HDMI-0 
workspace $wsCode output HDMI-0
workspace $wsConsole output DP-0
workspace $wsChat output DVI-I-1
workspace $wsDesign  output DP-0
workspace $wsVM output HDMI-0
workspace $wsVCS output DVI-I-1
workspace $wsDebug output DVI-I-1
workspace $wsMusic output DP-0

# map applications to workspaces
# browser
assign [class="Firefox"] workspace $wsBrowser
assign [class="Google-chrome"] workspace $wsBrowser
assign [class="qutebrowser"] workspace $wsBrowser
# mail
assign [class="Thunderbird"] workspace $wsMail
assign [class="Geary"] workspace $wsMail
# code
assign [class="QtCreator"] workspace $wsCode
assign [class="^Atom$"] workspace $wsCode
assign [class="^Code$"] workspace $wsCode
# design
assign [title="yEd"] workspace $wsDesign
# chat
assign [title="Viber"] workspace $wsChat
assign [class="skypeforlinux"] workspace $wsChat
# virtual machine
assign [class="VirtualBox"] workspace $wsVM
# music
assign [class="Spotify"] workspace $wsMusic

# vcs
assign [class="git-cola"] workspace $wsVCS
assign [class="qgit4"] workspace $wsVCS
assign [class="SmartGit"] workspace $wsVCS

# float simulator window
assign [class="CrowdSIM"] workspace $wsDebug
assign [title="^qtDebug$"] workspace $wsDebug

# startup apps
# start composite manager
exec --no-startup-id compton -b
# start screensaver
exec --no-startup-id gnome-screensaver
# setup NetworkManager applet
# exec --no-startup-id "nm-applet &"
# start notification daemon
exec --no-startup-id dunst &
# setup keyboard layouts and show a flag icon
exec_always --no-startup-id "setxkbmap -layout us,gr -variant ,extended -option grp:alt_shift_toggle"
# setup background
exec --no-startup-id "sh ~/.fehbg"
# owncloud
exec --no-startup-id owncloud &

