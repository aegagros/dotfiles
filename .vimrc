" identation
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

" syntax-coloring, line numbers, etc.
set t_Co=256
set nu
syntax on
set background=dark
colorscheme desert

" additional features
set wildmenu
set ruler
set hlsearch

map <F5> :Texplore<CR>
map <F6> :w<CR>
map <F7> :tabp<CR>
map <F8> :tabn<CR>
map <F12> :q<CR>
