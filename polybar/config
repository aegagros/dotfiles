[wal]
include-file = ~/.cache/wal/colors-polybar

[colors]
transparent = #00000000
black = #000000
background = ${wal.background}
background-alt = ${wal.color8}
foreground = ${wal.foreground}
foreground-alt = ${wal.color8}
warning = ${wal.color3}
fatal = ${wal.color1}
network = ${wal.color2}
input = ${wal.color5}
resources = ${wal.color4}
info = ${wal.color6}


[fonts]
font_0 = la\-solid\-900:pixelsize=18;4
font_1 = SegoeUI:pixelsize=10;2
font_2 = SegoeUI:pixelsize=12:style=Medium;2
font_3 = DejaVuSansMono:size=10;2

[global/wm]
margin-top = 0
margin-bottom = 0

[progressbar]
indicator_icon = ┃
empty_icon = ┈
fill_icon = ━
width = 20

[bar/common]
monitor = ${env:MONITOR}
width = 100%
height = 30
offset-x = 0
offset-y = 0
bottom = false
enable-ipc = true
background = ${colors.transparent}
foreground = ${colors.foreground}
padding-left = 1
padding-right = 1
module-margin-left = 0
module-margin-right = 3
font-0 = ${fonts.font_0}
font-1 = ${fonts.font_1}
font-2 = ${fonts.font_2}
tray-maxsize=16

[bar/main]
inherit = bar/common
modules-left =  backlight volubtc volheadphones spotify-prev spotify-play spotify-pause spotify-next spotify
modules-center = i3
modules-right = xkeyboard wlan eth1 eth2 vpn cpu temperature battery1 time
tray-position = right

[bar/main-bottom]
inherit = bar/common
modules-left = spotify-prev spotify-play spotify-pause spotify-next spotify
modules-center = date time
modules-right = backlight volubtc volheadphones
bottom = true

[bar/secondary]
inherit = bar/common
modules-left = xwindow
modules-center = i3
modules-right = xkeyboard

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%
format-foreground = ${colors.foreground-alt}

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock

; format-underline = ${colors.input}
format-prefix = " "
format-prefix-foreground = ${colors.input}
label-layout = %layout:2%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
wrapping-scroll = false
pin-workspaces = true
strip-wsnumbers = true
fuzzy-match = true
ws-icon-0 = term;
ws-icon-1 = www;
ws-icon-2 = mail;
ws-icon-3 = dev;
ws-icon-4 = code;
ws-icon-5 = chat;
ws-icon-6 = design;
ws-icon-7 = show;
ws-icon-8 = doc;
ws-icon-9 = notes;
ws-icon-10 = music;
ws-icon-default = 

label-mode-padding = 1
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.warning}

label-focused = %icon% %name%
label-focused-background=${colors.background}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.fatal}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 2

label-visible = %icon% %name%
label-visible-background = ${self.label-unfocused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>
label = %percentage%%
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.resources}
label = %percentage%%
label-minlen=4
label-alignment=left

[module/wlan]
type = internal/network
interface = wlp0s20f3
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.network}
format-connected = <label-connected>
label-connected = %essid% %signal%%

label-disconnected =
format-disconnected-prefix =
format-disconnected-underline = ${colors.fatal}
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth1]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.network}
format-connected-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =
format-disconnected-underline = ${colors.fatal}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth2]
type = internal/network
interface = enx806d971c3c33
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.network}
format-connected-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =
format-disconnected-underline = ${colors.fatal}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/vpn]
type = internal/network
interface = cscotun0
interval = 3.0

format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.network}
format-connected-foreground = ${colors.foreground}
label-connected = %local_ip%

format-disconnected =
format-disconnected-underline = ${colors.fatal}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
click-right = pavucontrol
format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.foreground-alt}
format-muted-prefix = ${self.format-volume-prefix}
format-muted-foreground = ${colors.foreground-alt}
#format-volume = <label-volume> <bar-volume>
format-volume = <label-volume>
label-volume = %percentage%%
label-volume-foreground = ${colors.foreground}
label-muted = "--------MUTED-------"
bar-volume-width = ${progressbar.width}
bar-volume-indicator = ${progressbar.indicator_icon}
bar-volume-indicator-font = 1
bar-volume-fill = ${progressbar.fill_icon}
bar-volume-fill-font = 1
bar-volume-empty = ${progressbar.empty_icon}
bar-volume-empty-font = 1
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/volubtc]
inherit = module/pulseaudio
format-volume-prefix = " "
# sink = alsa_output.usb-DisplayLink_ThinkPad_Hybrid_USB-C_with_USB-A_Dock_12236703-02.analog-surround-51
sink = alsa_output.usb-DisplayLink_ThinkPad_Hybrid_USB-C_with_USB-A_Dock_12236703-02.analog-stereo

[module/volheadphones]
inherit = module/pulseaudio
format-volume-prefix = " "
# sink = alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink
sink = alsa_output.usb-GN_Audio_A_S_Jabra_EVOLVE_30_II_0005922E549E08-00.iec958-stereo

[module/battery1]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
time-format = %H:%M

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}

# discharging
format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.fatal}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.warning}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.resources}

# charging
format-charging = <animation-charging> <label-charging>
label-charging = %percentage%%
label-charging-foreground = ${colors.network}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.network}
animation-charging-framerate = 250 

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c:4%
label-warn = %temperature-c%
label-warn-foreground = ${colors.fatal}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-foreground = ${colors.resources}

[module/date]
type = custom/script
interval = 60
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.background-alt}
format-foreground = ${colors.foreground}
#format-background = ${colors.background-alt}
format-padding = 2
label = %output%
exec = date +"%d/%m/%Y"
click-left = termlauncher.sh calcurse

[module/time]
type = custom/script
interval = 60
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.background-alt}
format-foreground = ${colors.foreground}
format-padding = 2
label = %{T3}%output%%{T-}
exec = date +"%H:%M"
click-left = gnome-calendar

[module/spotify]
type = custom/script
exec = playerctl -p spotify metadata --format "{{artist}} - {{title}}"
exec-if = test $(playerctl -p spotify status) = "Playing"
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
click-left = i3-msg '[title="Spotify"] focus'
label = %output:0:64:...%

[module/spotify-next]
type = custom/script
exec = echo ""
exec-if = test $(playerctl -p spotify status) = "Playing"
click-left = playerctl -p spotify next
format-foreground = ${colors.network}

[module/spotify-prev]
type = custom/script
exec = echo ""
exec-if = test $(playerctl -p spotify status) = "Playing"
click-left = playerctl -p spotify previous
format-foreground = ${colors.network}

[module/spotify-play]
type = custom/script
exec = echo ""
exec-if = test $(playerctl -p spotify status) = "Paused"
click-left = playerctl -p spotify play
interval = 1
format-foreground = ${colors.network}

[module/spotify-pause]
type = custom/script
exec = echo " "
exec-if = test $(playerctl -p spotify status) = "Playing"
click-left = playerctl -p spotify pause
interval = 1
format-foreground = ${colors.network}

